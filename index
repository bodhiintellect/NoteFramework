	<script type="text/javascript">
	function editmagazine() {
		window.document.body.className = 'edit'
		document.querySelector('.nature').setAttribute('contenteditable', 'true')
	}
	function moveRight() {
		const element = document.querySelector('.nature')
		const style = getComputedStyle(element)
		value = +style.left.split('p')[0] + 10
		console.info(value)
		element.style.left = value + "px"
	}
	function moveLeft() {
		const element = document.querySelector('.nature')
		const style = getComputedStyle(element)
		value = +style.right.split('p')[0] + 10
		console.info(value)
		element.style.right = value + "px"
	}
	function moveLeft() {
		const element = document.querySelector('.nature')
		const style = getComputedStyle(element)
		value = +style.left.split('p')[0] - 10
		console.info(value)
		element.style.left = value + "px"
	}
	function moveTop() {
		const element = document.querySelector('.nature')
		const style = getComputedStyle(element)
		value = +style.top.split('p')[0] - 10
		console.info(value)
		element.style.top = value + "px"
	}
	function moveBottom() {
		const element = document.querySelector('.nature')
		const style = getComputedStyle(element)
		value = +style.top.split('p')[0] + 10
		console.info(value)
		element.style.top = value + "px"
	}
	function saveFile() {
		// let code = .innerHTML
		clone = document.getElementById("clone")
		clone.textContent = document.querySelector('.pre').removeAttribute("hidden")
		clone.textContent = document.querySelector('.magazine').outerHTML;
		document.querySelector('.nature').setAttribute('contenteditable', 'false')
		document.body.classList.remove('edit')
	}
	function closeCode() {
		document.getElementById("clone").innerHTML = ""
		clone.textContent = document.querySelector('.pre').setAttribute('hidden',"true")
		document.body.classList.remove('edit')
	}
	</script>
	<pre class="pre" hidden>
		<a href="javascript:void(0)" class="cancelCode" contenteditable="false" onclick="closeCode()">
			<span class="material-icons">
				cancel 
			</span>					
		</a>
		<code  id="clone">
			

		</code>
	</pre>
